{{! Partial for a single post }}
<div class="post">
    <div class="post-avatar">
        <!-- the user's avatar -->
    </div>
    <div class="post-content preserve-newlines">
        <!-- the post -->
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <div class="post-status-bar">
            <!-- everything that is shown in the status bar -->
            <!-- Heart = ♥ -->
            {{!-- <p>name comparision: {{this.username}} {{user.username}}</p> --}}
            {{#ifCond user.username this.username}}
                <button id="delete-button"><i class="fas fa-trash-alt"> </i></button>
            {{else}}
                <button id="like-button" data-id={{this.id}}>♥</button>
            {{/ifCond}}
            <!-- font awesome  trashcan = <i class="fas fa-trash-alt"> </i>-->
            <h3>{{this.likes}} Likes</h3>
            <h3>Posted by {{this.username}} on {{this.timestamp}}</h3>
        </div>        
    </div>
</div>
